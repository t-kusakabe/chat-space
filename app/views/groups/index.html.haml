.chat-side
  .chat-user
    %h5.chat-user__name user name
    %span.chat-user__actions
      = link_to edit_user_registration_path, class: 'chat-user__action' do
        = fa_icon 'cog'
      = link_to new_group_path, class: 'chat-user__action' do
        = fa_icon 'pencil-square-o'

  .chat-groups
    %ul
      %li.chat-group
        %a.chat-group__link{ href: '#' }
          %p.chat-group__name group name1
          %p.chat-group__message message1
      %li.chat-group
        %a.chat-group__link{ href: '#' }
          %p.chat-group__name group name2
          %p.chat-group__message message2
